<% /* Registration View - views/account/register.ejs */ %>
<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: title }) %>
<body>
  <div class="register-container">
    <h1><%= title %></h1>
    <% if (typeof messages === 'function') { %>
      <div class="flash-message">
        <%- messages() %>
      </div>
    <% } %>
    <form action="/account/register" method="post" autocomplete="on">
      <label for="account_firstname">First Name:</label>
      <input type="text" id="account_firstname" name="account_firstname" value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>" required>
      <label for="account_lastname">Last Name:</label>
      <input type="text" id="account_lastname" name="account_lastname" value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>" required>
      <label for="account_email">Email:</label>
      <input type="email" id="account_email" name="account_email" value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" required>
      <label for="account_password">Password:</label>
      <input type="password" id="account_password" name="account_password" minlength="12" required pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*]).{12,}$">
      <small class="password-hint">
        Password must be at least 12 characters, contain 1 capital letter, 1 number, and 1 special character.
      </small>
      <button type="button" id="togglePassword" onclick="togglePasswordVisibility()">Show/Hide Password</button>
      <button type="submit">REGISTER</button>
    </form>
    <div class="signup-link">
      Already have an account? <a href="/account/login">Login</a>
    </div>
  </div>
  <script>
    function togglePasswordVisibility() {
      const pwd = document.getElementById('account_password');
      if (pwd) {
        pwd.type = pwd.type === 'password' ? 'text' : 'password';
      }
    }
  </script>
</body>
</html>
